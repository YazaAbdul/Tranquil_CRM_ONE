    <style name="AppTheme.Base" pareAppThement="AppTheme">
        <!-- colorPrimary is used, for instance, for the default ActionBar (but not Toolbar) background.
              We specify the same color for the toolbar background in
              toolbar.xml.. -->

        <item name="colorPrimary">@color/bg_background</item>
        <item name="colorControlNormal">@color/edit_b</item>
        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">#67da36</item>

        <!-- colorAccent is used as the default value for
             colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">#ffbf00</item>
    </style>

