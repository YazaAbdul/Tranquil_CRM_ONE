<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">


                <include layout="@layout/header_attendance" />


            </RelativeLayout>

            <!--<com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/MyTabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_gradient_main"/>-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:background="@drawable/bg_gradient_main"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/campaignsVisibleRLID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:background="@drawable/bg_sale_activity">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gradientPrimary"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Campaign Calls"
                            tools:ignore="HardcodedText" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/campaignsGoneRLID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_sale_activity2">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Campaign Calls"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            tools:ignore="HardcodedText" />



                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/followUpVisibleRLID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_sale_activity">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Auto Followups"
                            android:textColor="@color/gradientPrimary"
                            android:textSize="@dimen/_11ssp"
                            tools:ignore="HardcodedText" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/followUpGoneRLID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:gravity="center"
                        android:visibility="visible"
                        android:background="@drawable/bg_sale_activity2">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Auto Followups"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            tools:ignore="HardcodedText" />



                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <!--<androidx.viewpager.widget.ViewPager
                android:id="@+id/campaignViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

            <FrameLayout
                android:id="@+id/campaignViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>




        </LinearLayout>




</RelativeLayout>