<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_header">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/bg_header"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Choose Template"
                            android:textColor="@color/blue"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <RelativeLayout
                            android:id="@+id/closeRLID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:background="@drawable/ic_close"
                                android:backgroundTint="@color/blue"
                                android:contentDescription="@string/app_name"
                                tools:ignore="UnusedAttribute" />

                        </RelativeLayout>

                    </RelativeLayout>

                </com.google.android.material.appbar.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="3dp"
                            android:text="Tittle"
                            android:textColor="@color/edit_7"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/emailTVID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="10dp"
                            android:text="Tittle"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="3dp"
                            android:text="Subject"
                            android:textColor="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/subjectETID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Subject"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="Autofill,HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="3dp"
                            android:text="Message"
                            android:textColor="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/messageETID"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="top"
                            android:hint="Message"
                            android:inputType="textMultiLine"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="Autofill,HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="3dp"
                            android:text="Attachment"
                            android:textColor="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="top"
                            android:hint="Attachment"
                            android:inputType="textMultiLine"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_7"
                            android:textSize="14sp"
                            tools:ignore="Autofill,HardcodedText" />

                    </LinearLayout>

                    <crm.tranquil_sales_steer.data.requirements.ExpandableHeightGridView
                        android:id="@+id/email1EXVID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:numColumns="1"
                        android:smoothScrollbar="true" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/emailSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_app_2"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="HardcodedText,UnusedAttribute" />

</LinearLayout>