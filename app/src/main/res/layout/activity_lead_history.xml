<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRLID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/scrollCordinate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/detailsLLID"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:id="@+id/leadBasicRLID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="top"
                        android:visibility="gone"
                        android:weightSum="3"
                        app:layout_collapseMode="parallax">


                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.8" />

                        <RelativeLayout
                            android:id="@+id/_remainderID"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:gravity="center">


                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/notifications"
                                android:backgroundTint="@color/black_n"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/editRLID"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_edit"
                                android:backgroundTint="@color/black_n"
                                android:contentDescription="@string/app_name" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_home_screen_gradient">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_collapseMode="parallax"
                            tools:ignore="UselessParent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_1sdp"
                                    tools:ignore="DisableBaselineAlignment,UselessParent">

                                    <RelativeLayout
                                        android:id="@+id/picRLID"
                                        android:layout_width="@dimen/_52sdp"
                                        android:layout_height="@dimen/_52sdp"
                                        tools:ignore="TooDeepLayout">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/imageDrawable"
                                            android:layout_width="@dimen/_52sdp"
                                            android:layout_height="@dimen/_52sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_10ssp"
                                            android:src="@drawable/userpic"
                                            app:civ_border_color="#66aaaaaa"
                                            app:civ_border_width="0.1dp"
                                            tools:ignore="TooDeepLayout" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="@dimen/_5sdp">

                                        <TextView
                                            android:id="@+id/customerNaTVID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13ssp" />

                                        <TextView
                                            android:id="@+id/companyTVID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_11ssp" />

                                        <RelativeLayout
                                            android:id="@+id/tagsRLID"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_28sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:gravity="center">

                                            <androidx.recyclerview.widget.RecyclerView
                                                android:id="@+id/tagsRCID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_centerInParent="true" />

                                            <ProgressBar
                                                android:id="@+id/tagsPB"
                                                android:layout_width="@dimen/_22sdp"
                                                android:layout_height="@dimen/_22sdp"
                                                android:layout_centerInParent="true"
                                                android:visibility="gone" />

                                            <RelativeLayout
                                                android:id="@+id/noTagsTVID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:background="@drawable/bg_no_tag"
                                                android:gravity="center"
                                                android:padding="@dimen/_5sdp"
                                                android:visibility="gone">

                                                <TextView
                                                    android:id="@+id/noTags"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:fontFamily="@font/roboto_regular"
                                                    android:text="Add Tags"
                                                    android:textColor="@color/edit_7"
                                                    android:textSize="@dimen/_10ssp"
                                                    tools:ignore="HardcodedText" />

                                                <RelativeLayout
                                                    android:layout_width="@dimen/_16ssp"
                                                    android:layout_height="@dimen/_16ssp"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginStart="@dimen/_4sdp"
                                                    android:layout_toEndOf="@+id/noTags"
                                                    android:background="@drawable/bg_add">

                                                    <ImageView
                                                        android:layout_width="@dimen/_10sdp"
                                                        android:layout_height="@dimen/_10sdp"
                                                        android:layout_centerInParent="true"
                                                        android:background="@drawable/fab_add"
                                                        android:contentDescription="@string/app_name" />

                                                </RelativeLayout>

                                            </RelativeLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_1sdp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:id="@+id/callBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_phone_circle"
                                        android:elevation="@dimen/_5sdp"
                                        android:gravity="center"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_phone"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/messageBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_phone_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:gravity="center"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_message"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/mailBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_email_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_mail"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/whatsAppBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_whats_app_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_whatsapp"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/estimationBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_phone_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_estimation"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/calenderBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_calender_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:visibility="gone"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_calender"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/locationBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_location_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:visibility="gone"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_location"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/websiteBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_web_site_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:visibility="gone"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_globe"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/linkedInBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_phone_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:visibility="gone"
                                        tools:ignore="UnusedAttribute">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/bg_phone_circle_1">

                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_height="@dimen/_14sdp"
                                                android:layout_centerInParent="true"
                                                android:backgroundTint="@color/white"
                                                android:contentDescription="@string/app_name" />

                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/googleBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_google_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        android:gravity="center"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:background="@drawable/_goole"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/shareBtnRLID"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/bg_share_circle_1"
                                        android:elevation="@dimen/_5sdp"
                                        tools:ignore="UnusedAttribute">

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/_share"
                                            android:backgroundTint="@color/white"
                                            android:contentDescription="@string/app_name" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/historyToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="top"
                    android:minHeight="?attr/actionBarSize"
                    android:visibility="invisible"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@null"
                    app:titleTextColor="@color/bg_header">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/_backID"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_backarrow2"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/toolBarPicID"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/userpic"
                            app:civ_border_color="#66aaaaaa"
                            app:civ_border_width="0.1dp"
                            tools:ignore="TooDeepLayout" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/toolBarPicID"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/toolBarNameTVID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/roboto_regular"
                                android:maxLines="1"
                                android:text="Test"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13ssp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/toolBarMobileTVID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/roboto_regular"
                                android:maxLines="1"
                                android:text="Test"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    style="@style/MyTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@color/edit_b"
                    app:tabMode="scrollable" />

            </RelativeLayout>

            <View
                style="@style/Widget.Shadow.AppBar"
                app:layout_anchor="@+id/appbar"
                android:visibility="gone"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/detailsLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/edit_b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:background="@color/bg_header"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ProgressBar
                    android:id="@+id/detailsPB"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/scheduledActivityNameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="Phone Call"
                    android:textColor="@color/edit_4"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/scheduledActivityNameID"
                    android:background="@drawable/bg_sche"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_4sdp"
                    android:text="Scheduled"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/scheduledActivityDateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="Aug-31"
                    android:textColor="@color/edit_4"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonsRLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancelBtnID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_new_btn"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cancelled"
                        android:textAllCaps="false"
                        android:textColor="@color/red_light"
                        android:textSize="@dimen/_11ssp"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:id="@+id/completeBtnID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_new_btn"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Completed"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_11ssp"
                        tools:ignore="ButtonStyle,HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menuID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btns"
        android:background="#6C000000"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/mainDisID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                tools:ignore="TooManyViews">

                <GridView
                    android:id="@+id/menuGVID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/transparent"
                    android:numColumns="4"
                    android:smoothScrollbar="true" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/closeMenuRLID"
            android:layout_width="@dimen/_43sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_above="@+id/mainDisID"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_minus18sdp"
            android:background="@drawable/bg_white_circle">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_cancel_music"
                android:backgroundTint="@color/black_n"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btns"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/bottomActiveAlert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_menu"
            tools:ignore="TooManyViews,UselessParent">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/menu"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomDisAlert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_menu"
            android:visibility="gone"
            tools:ignore="TooManyViews,UselessParent">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/menu"
                android:backgroundTint="#aaa"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>