<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/quantityNumberID"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10ssp"
            android:paddingStart="@dimen/_4sdp"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:id="@+id/dateID"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="29-jun-2019"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/createdTVID"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Created By"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/quotationTVID"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Quotation"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/amountID"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="1000"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/proformaMainRLID"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/proformaTVID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Proforma"
                android:visibility="gone"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/proformaRLID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/convert_proforma"/>


            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoiceMainRLID"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invoiceTVID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Invoice"
                android:visibility="gone"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/invoiceRLID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/convert_invoice"/>


            </RelativeLayout>




        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/viewRLID"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                tools:ignore="KeyboardInaccessibleWidget,NestedWeights,UnusedAttribute">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/view" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/convertRLID"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget,NestedWeights,UnusedAttribute">

                <ImageView
                    android:id="@+id/imageID"
                    android:contentDescription="@string/app_name"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/edit"/>

                <ImageView
                    android:id="@+id/imageID2"
                    android:contentDescription="@string/app_name"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="@drawable/success_"/>


            </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#747474" />

</LinearLayout>