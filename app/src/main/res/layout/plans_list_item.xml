<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:id="@+id/shortcutsRLID"
    tools:ignore="UnusedAttribute">

    <androidx.cardview.widget.CardView
        android:id="@+id/planCVID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_3sdp"

        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_8sdp">



    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/shortcutsBackgroundRLID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/planImageRLID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:scaleType="fitXY"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_above="@id/viewRLID">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shortcutsIVID"
                android:layout_width="@dimen/_24sdp"
                android:tint="@color/black"
                android:layout_height="@dimen/_24sdp"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shortcutsTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/bg_dark"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:visibility="gone"
            android:layout_above="@id/viewRLID"
            android:background="@color/white"/>

        <RelativeLayout
            android:id="@+id/viewRLID"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_3sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_5sdp"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/ic_arrow_forward"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_10sdp">



        </androidx.cardview.widget.CardView>



    </RelativeLayout>





</RelativeLayout>