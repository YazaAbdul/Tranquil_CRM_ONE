<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40ssp"
        android:background="@drawable/header"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.45">

            <RelativeLayout
                android:id="@+id/backRLID"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

                <ImageView
                    android:layout_width="@dimen/_15ssp"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_2"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/app_name"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/headerTittleTVID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.7"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textAllCaps="false"
            android:text="Header"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/makePaymentBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/bg_all_btn_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Make Payment"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    tools:ignore="HardcodedText"
                    android:textSize="@dimen/_10ssp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>