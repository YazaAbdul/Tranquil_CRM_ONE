<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemsViewLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/dateTVID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="27-jun-2019"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                android:paddingStart="@dimen/_4sdp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/particularsTVID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Particulars"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/debitTVID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Debit"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/creditTVID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Credit"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/viewUploadedDetailsRLID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/down"
                    android:contentDescription="@string/app_name" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/edit_b" />

    </LinearLayout>

</LinearLayout>