<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/leadDetailsRLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/leadPicID"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/userpic"
                app:civ_border_color="@color/edit_7"
                app:civ_border_width="@dimen/_1sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/leadPicID"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/leadNameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name1"
                    android:fontFamily="@font/sansation_bold"
                    android:textSize="@dimen/_13ssp"
                    android:padding="@dimen/_1sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name1"
                    android:textColor="@color/edit_4"
                    android:fontFamily="@font/sansation_light"
                    android:textSize="@dimen/_11ssp"
                    android:padding="@dimen/_1sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name1"
                    android:textColor="@color/edit_4"
                    android:fontFamily="@font/sansation_light"
                    android:textSize="@dimen/_10ssp"
                    android:padding="@dimen/_1sdp"
                    />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/leadDetailsRLID">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/edit_b"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity Name"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/edit_4"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Call"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No.of Repetition"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/edit_4"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Call"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Repetition"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/edit_4"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Repitaion"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>