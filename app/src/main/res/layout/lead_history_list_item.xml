<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/infoRLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/activityNameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_regular"
                android:text="Phone Call"
                android:textColor="@color/edit_4"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/activityDateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="55dp"
                android:fontFamily="@font/roboto_regular"
                android:text="30-jul"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/completeImage"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/success_"/>

                <ImageView
                    android:id="@+id/cancelImage"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:background="@drawable/failed_"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/activityNotesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoRLID"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Notes :"
            android:textColor="@color/edit_7"
            android:textSize="@dimen/_9ssp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/edit_b"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dottedLineIVID"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_dotted_line"
        android:layout_marginStart="@dimen/_5sdp"
        android:visibility="gone"
        android:rotation="270"/>



</LinearLayout>