<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_4sdp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/bg_background"
            android:layout_height="wrap_content">

            <View

                android:layout_width="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:background="@color/gradientPrimary"/>


            <RelativeLayout
                android:id="@+id/newMainLeadView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_7sdp">

                <RelativeLayout
                    android:id="@+id/leadInfoRLID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/leadNameTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:text="@string/app_name"
                        android:contentDescription="@string/app_name"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/leadSourceTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_11ssp"
                        android:background="@drawable/bg_description"
                        android:padding="@dimen/_4sdp"
                        android:backgroundTint="@color/green"
                        android:contentDescription="@string/app_name"
                        android:text="@string/app_name"
                        tools:ignore="RelativeOverlap" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/leadIDTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_11ssp"
                        android:background="@drawable/bg_description"
                        android:backgroundTint="@color/gradientSecondary"
                        android:text="@string/app_name"
                        android:layout_toStartOf="@+id/leadSourceTVID"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/leadInfo2RLID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/leadInfoRLID">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/projectTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/app_name"
                        android:contentDescription="@string/app_name"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/createdDateTitleTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:text="Created Date"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_below="@id/projectTVID"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/createdDateTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:text="Created Date"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_below="@id/createdDateTitleTVID"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityDateTitleTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Activity Type"
                        android:layout_below="@id/projectTVID"
                        android:layout_toEndOf="@id/createdDateTitleTVID"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityDateTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:text="Activity Date"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/activityDateTitleTVID"
                        android:layout_toEndOf="@id/createdDateTitleTVID"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/remarkTitleTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/red_light"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Last Remarks : "
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_below="@id/activityDateTVID"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lastRemarkTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/edit_b"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Last Remark : "
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_below="@id/activityDateTVID"
                        android:layout_toEndOf="@+id/remarkTitleTVID"
                        android:contentDescription="@string/app_name"
                        tools:ignore="HardcodedText" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/leadPic"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_below="@+id/projectTVID"
                        android:layout_above="@+id/lastRemarkTVID"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/leadInfo2RLID"
                    android:weightSum="7"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/foldersRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/folders_new" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/businessWhatsAppCallRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/business_whatsapp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mailBtnRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/gmail" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/messageBtnRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/message_new" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/whatsAppCallRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/whatsapp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cubeCallRLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <RelativeLayout
                            android:layout_width="35dp"
                            android:layout_height="37dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_cube_call">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/_phone"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/newPhoneRL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_weight="1"
                        tools:ignore="UnusedAttribute">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_phone_circle_1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/_phone"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>
                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>