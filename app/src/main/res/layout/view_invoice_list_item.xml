<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/quantityNumberID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10sdp"
            android:paddingStart="@dimen/_4sdp"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:id="@+id/dateID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="29-jun-2019"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10sdp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/amountID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="1000"
            android:textColor="@color/edit_4"
            android:textSize="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            tools:ignore="DisableBaselineAlignment">

            <RelativeLayout
                android:id="@+id/viewRLID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                tools:ignore="KeyboardInaccessibleWidget,NestedWeights,UnusedAttribute">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/view"
                    android:contentDescription="@string/app_name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/convertRLID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                tools:ignore="KeyboardInaccessibleWidget,NestedWeights,UnusedAttribute">

                <TextView
                    android:id="@+id/convertID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Covert"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#747474" />

</LinearLayout>