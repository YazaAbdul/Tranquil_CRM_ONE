<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5ssp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/bg_alert_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_30sdp"
                android:paddingBottom="@dimen/_10sdp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/errorLLID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:foregroundGravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="done.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:id="@+id/successTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="Lead Created Successfully"
                        android:textColor="@color/black_n"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Press "
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black_n"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/okTVID"
                            android:layout_width="@dimen/_60ssp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/bg_all_btn"
                            android:elevation="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|center"
                            android:padding="@dimen/_5sdp"
                            android:text="OK"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="ButtonOrder,HardcodedText,UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="  to exit"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black_n"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_white_circle"
        android:gravity="center">


        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/recommended"
            android:backgroundTint="@color/black_n"
            android:contentDescription="@string/app_name"
            tools:ignore="UnusedAttribute" />


    </RelativeLayout>

</RelativeLayout>


