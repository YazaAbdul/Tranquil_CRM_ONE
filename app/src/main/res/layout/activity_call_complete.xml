<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.activities.dashboard.CallCompleteActivity">

    <LinearLayout
        android:id="@+id/mainViewLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_gradient_main">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/headerTittleTVID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/whatsAppRLID"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="header"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    tools:ignore="HardcodedText"/>

                <RelativeLayout
                    android:id="@+id/disableRLID"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/whatsAppRLID"
                    android:background="@drawable/bg_phone_circle_1"
                    android:backgroundTint="@color/black"
                    android:elevation="@dimen/_5sdp"
                    tools:ignore="UnusedAttribute">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/disabled"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/whatsAppRLID"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/okRLID">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/whatsappicon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/okRLID"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:alpha="0.6"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_5sdp"
                    tools:ignore="RtlSymmetry,UselessParent">


                    <RelativeLayout
                        android:id="@+id/callBtnRLID"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/bg_phone_circle_1"
                        android:backgroundTint="@color/white"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        tools:ignore="UnusedAttribute">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/mobileIVID"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/_phone"
                            android:backgroundTint="@color/gradientPrimary"
                            android:contentDescription="@string/app_name"
                            android:visibility="visible" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/okIVID"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/verification_mark"
                        android:backgroundTint="@color/white"
                        android:visibility="gone" />



                </RelativeLayout>



            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/mainLLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Next Activity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/activityRLID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_callcomp">

                    <!-- <Spinner
                        android:id="@+id/nextActivitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black"
                        android:padding="@dimen/_2ssp"
                        tools:ignore="UnusedAttribute" />-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:id="@+id/activityTVID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Activity"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/down"
                            android:contentDescription="@string/app_name" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35ssp"
                android:layout_marginTop="@dimen/_6ssp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_callcomp">

                    <Spinner
                        android:id="@+id/statusSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black"
                        android:padding="@dimen/_2ssp"
                        tools:ignore="UnusedAttribute" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35ssp"
                android:layout_marginTop="@dimen/_6ssp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Next Activity Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/dateRLID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_callcomp">

                    <TextView
                        android:id="@+id/dateTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/_6ssp"
                        android:paddingEnd="@dimen/_6ssp"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35ssp"
                android:layout_marginTop="@dimen/_6ssp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Next Activity Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/timeLLID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_callcomp">

                    <TextView
                        android:id="@+id/timeTVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/_6ssp"
                        android:paddingEnd="@dimen/_6ssp"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                tools:ignore="HardcodedText" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_callcomp"
               android:weightSum="100"
                >
                <AutoCompleteTextView
                    android:id="@+id/remarksAutoID"
                    android:layout_width="wrap_content"
                    android:layout_weight="90"
                    android:layout_height="@dimen/_80ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="top"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/bg_callcomp_note"
                    android:hint="Enter Description"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_4ssp"
                    android:paddingStart="@dimen/_6ssp"
                    android:paddingEnd="@dimen/_6ssp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="Autofill,HardcodedText" />
                <LinearLayout
                    android:id="@+id/micLID"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="10"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UnusedAttribute">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_mic_24dp"
                        android:backgroundTint="@color/black"
                        tools:ignore="ContentDescription,UnusedAttribute" />


                </LinearLayout>
            </LinearLayout>











        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainViewLLID"
        android:layout_above="@+id/layoutLLID">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/remarksRVID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_50sdp">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutLLID"
        android:visibility="gone">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/nextLeadCVID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/truecaller_blue"
            app:cardElevation="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_main"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/nextLeadRLID"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute,UselessParent">


                    <RelativeLayout
                        android:id="@+id/newMainLeadView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute,UselessParent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/leadPic"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:alpha="0.7" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/leadPic"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_8ssp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_8ssp"
                            android:paddingBottom="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/newLeadNameTVID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:layout_marginEnd="@dimen/_85sdp"
                                android:textSize="@dimen/_14ssp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/leadMobileTVID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp"
                                tools:ignore="HardcodedText" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nextCallLLID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:foreground="?selectableItemBackground"
                            android:gravity="right"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:id="@+id/whatsAppCallRLID"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:alpha="0.6"
                                android:elevation="@dimen/_5sdp"
                                android:gravity="center"
                                android:visibility="gone"
                                tools:ignore="UnusedAttribute">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/whatsapp"
                                    android:contentDescription="@string/app_name" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/newPhoneRL"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:alpha="0.6"
                                android:elevation="@dimen/_5sdp"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_5sdp"
                                tools:ignore="RtlSymmetry,UselessParent">

                                <RelativeLayout
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_login_btn">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="View"
                                        android:textColor="@color/black"
                                        tools:ignore="HardcodedText" />



                                </RelativeLayout>


                            </RelativeLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#b4b4b4"
                        android:visibility="visible" />



                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal"
                    android:background="@color/bg_background"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/whatsAppLLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/whatsappicon"/>


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="WHATSAPP"
                            tools:ignore="HardcodedText" />




                    </LinearLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@color/edit_b"/>


                    <LinearLayout
                        android:id="@+id/skipLLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_phone_circle_1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/right"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="SKIP"
                            tools:ignore="HardcodedText" />

                        <!--<ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/right"
                            android:layout_marginStart="@dimen/_5sdp"/>-->



                    </LinearLayout>


                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@color/edit_b"/>

                    <LinearLayout
                        android:id="@+id/cubeCallLLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_cube_call">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/_phone"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="CALL"
                            tools:ignore="HardcodedText" />




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/callLLID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_phone_circle_1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/_phone"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/app_name" />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="CALL"
                            tools:ignore="HardcodedText" />




                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_top_corners"
            android:backgroundTint="#D5D8D9"
