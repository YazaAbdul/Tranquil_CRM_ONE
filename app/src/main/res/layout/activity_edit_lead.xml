                            android:background="@drawable/_bg_box"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                tools:ignore="DisableBaselineAlignment">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="@dimen/_9sdp"
                                        android:background="@drawable/source_"
                                        android:contentDescription="@string/app_name" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7">

                                    <TextView
                                        android:id="@+id/requirementTVID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true"
                                        android:text="Select Requirement Type"
                                        tools:ignore="HardcodedText"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textSize="@dimen/_12ssp" />

                                    <ImageView
                                        android:contentDescription="@string/app_name"
                                        android:layout_width="@dimen/_6sdp"
                                        android:layout_height="@dimen/_6sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_15sdp"
                                        android:background="@drawable/down"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:visibility="invisible"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/edit_b" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/requirementOtherLLID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:background="@drawable/_bg_box"
                            android:visibility="gone"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                tools:ignore="DisableBaselineAlignment">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:background="@drawable/add_d"
                                        android:contentDescription="@string/app_name" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7">


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/requirementOtherETID"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_35sdp"
                                            android:background="@android:color/transparent"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/roboto_regular"
                                            android:hint="Other Requirement"
                                            android:textColor="@color/bg_dark"
                                            android:textColorHint="@color/edit_7"
                                            android:textSize="@dimen/_12ssp"
                                            tools:ignore="HardcodedText,UnusedAttribute" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:visibility="invisible"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@color/black_n" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:background="@drawable/_bg_box"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                tools:ignore="DisableBaselineAlignment,TooManyViews">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:background="@drawable/_globe"
                                        android:contentDescription="@string/app_name" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7">


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/website_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/websiteETID"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_35sdp"
                                            android:background="@android:color/transparent"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/roboto_regular"
                                            android:hint="Website"
                                            android:textColorHint="@color/edit_7"
                                            android:textColor="@color/bg_dark"
                                            android:textSize="@dimen/_12ssp"
                                            tools:ignore="HardcodedText,UnusedAttribute" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:visibility="invisible"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@color/edit_b" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:background="@drawable/_bg_box"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                tools:ignore="DisableBaselineAlignment">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:background="@drawable/city_"
                                        android:contentDescription="@string/app_name" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7">


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/location_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/locationETID"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_35sdp"
                                            android:background="@android:color/transparent"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/roboto_regular"
                                            android:hint="Location"
                                            android:textColorHint="@color/edit_7"
                                            android:textColor="@color/bg_dark"
                                            android:textSize="@dimen/_12ssp"
                                            tools:ignore="HardcodedText,UnusedAttribute" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:visibility="invisible"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@color/edit_b" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:background="@drawable/_bg_box"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                tools:ignore="DisableBaselineAlignment">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:background="@drawable/city_"
                                        android:contentDescription="@string/app_name" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7">


