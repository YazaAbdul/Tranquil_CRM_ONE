<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shortcutsRLID">

    <androidx.cardview.widget.CardView
        android:id="@+id/planCVID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:elevation="@dimen/_4sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp">






    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/shortcutsBackgroundRLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        >

        <!--<androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shortcutsBackgroundIVID"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_shortcuts" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shortcutsIVID"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:tint="@color/black"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shortcutsTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textAlignment="center"
            android:minLines="2"
                android:maxLines="2"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black_2"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />


        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:id="@+id/shortcutCVID"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/planImageRLID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </RelativeLayout>

        </androidx.cardview.widget.CardView>





    </RelativeLayout>

</RelativeLayout>