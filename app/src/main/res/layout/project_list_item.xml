<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/projectCVID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4ssp"
        android:layout_marginTop="@dimen/_2ssp"
        android:layout_marginEnd="@dimen/_4ssp"
        android:layout_marginBottom="@dimen/_2ssp"
        android:elevation="@dimen/_2ssp"
        app:cardCornerRadius="@dimen/_4ssp"
        app:cardElevation="@dimen/_3ssp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_8ssp"
            android:layout_marginBottom="@dimen/_1ssp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24ssp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp"
                    android:text="Project Name"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/edit_b"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90ssp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_4sdp"
                tools:ignore="DisableBaselineAlignment,UselessParent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">


                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/pending"
                            android:backgroundTint="@color/red_light"
                            android:contentDescription="@string/app_name" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending - "
                                android:textColor="@color/red_light"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_10ssp"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/red_light"
                                android:textSize="@dimen/_11ssp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">


                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/hold"
                            android:backgroundTint="#79440B"
                            android:contentDescription="@string/app_name" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hold - "
                                android:textColor="#79440B"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_10ssp"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="#79440B"
                                android:textSize="@dimen/_11ssp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">


                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/completed"
                            android:backgroundTint="@color/green_main"
                            android:contentDescription="@string/app_name" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_2sdp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completed - "
                                android:textColor="@color/green_main"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_10ssp"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/green_main"
                                android:textSize="@dimen/_11ssp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Out Time : "
                            android:textColor="#EF4343"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2ssp"
                            android:fontFamily="sans-serif"
                            android:text="Time"
                            android:textColor="@color/edit_7"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>