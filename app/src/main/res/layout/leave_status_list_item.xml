<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_4ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_4ssp"
        android:elevation="@dimen/_5ssp"
        app:cardCornerRadius="@dimen/_5ssp"
        app:cardElevation="@dimen/_5ssp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_8ssp"
            android:layout_marginBottom="@dimen/_1ssp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30ssp">

                <TextView
                    android:id="@+id/leaveNameTVID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_15ssp"
                    android:text="Total Working Hours : 5 Hrs"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/_1ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100ssp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_1ssp"
                tools:ignore="DisableBaselineAlignment,UselessParent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="From Date : "
                            android:textColor="@color/green_main"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/fromLeaveDateTVID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2ssp"
                            android:fontFamily="sans-serif"
                            android:text="Date"
                            android:textColor="@color/edit_7"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="To Date : "
                            android:textColor="@color/green_main"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/toLeaveDateTVID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2ssp"
                            android:fontFamily="sans-serif"
                            android:text="Time"
                            android:textColor="@color/edit_7"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Leave Days : "
                            android:textColor="#EF4343"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/leaveNoOfDaysTVID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2ssp"
                            android:fontFamily="sans-serif"
                            android:text="Date"
                            android:textColor="@color/edit_7"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Leave Status : "
                            android:textColor="#EF4343"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/leaveStatusTVID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2ssp"
                            android:fontFamily="sans-serif"
                            android:text="Time"
                            android:textStyle="bold"
                            android:textColor="@color/edit_7"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>